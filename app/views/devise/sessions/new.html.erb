
<div class="contact-us">
<h1>Log in</h1>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "E-mail" %>
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
    <%= f.submit "Log in", class: "btn btn-info"%>
  <% end %>
    <%= link_to "Sign Up", new_user_registration_path, style: "text-decoration: none;" %>
</div>
<style>
@import url("https://fonts.googleapis.com/css?family=Fjalla+One&display=swap");
* {
  margin: 0;
  padding: 0;
}

body {
  width: 100vw;
  height: 100vh;
  display: grid;
  align-items: center;
  justify-items: center;
}

.contact-us {
  background: light;
  padding: 50px 100px;
  border: 2px solid dodgerblue;
}

input {
  display: block;
  width: 100%;
  line-height: 28pt;
  font-family: "Serif";
  margin-bottom: 28pt;
  border: 0.5px solid dodgerblue;
  background: light;
  border-radius: 4px;
  min-width: 250px;
  padding-left: 5px;
}

input:focus {
  border: 5px solid lightblue;
}

button {
  display: block;
  margin: 0 auto;
  line-height: 28pt;
  padding: 0 20px;
  background: lightblue;
  border: 1px solid dodgerblue;
}
button:hover {
  background: black;
  color: white;
  border: 1px solid black;
}

::selection {
  background: #ffc8ff;
}

</style>